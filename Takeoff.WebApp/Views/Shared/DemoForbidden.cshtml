@{
    Layout = "~/Views/Shared/Layout-App-Slim.cshtml"; 
    ViewData.AddBodyCss("demo-forbidden");
    ViewData["PageTitle"] = S.Demo_Forbidden_Title;
    ViewData["EnableNagBanner"] = false;//don't nag them quite yet
}
@section Header
{
    <h1>@S.Demo_Forbidden_Title</h1>
}
<p class="@Html.AlertWarningClass(true)">
@S.Demo_Forbidden_Message
</p>
<div class="actions">
<a class="@Html.PrimaryButtonClass()" href="@(Url.Action<SignupController>(c => c.Index(null, null, null)))">@S.Demo_Forbidden_SignupBtnText</a>
</div>